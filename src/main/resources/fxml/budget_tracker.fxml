<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.chart.PieChart?>

<VBox alignment="CENTER" spacing="20" stylesheets="@styles.css"
      fx:controller="com.example.financetracker.BudgetTrackerController"
      xmlns:fx="http://javafx.com/fxml">

    <!-- Title Section -->
    <Label text="Budget Tracker" styleClass="title"/>

    <!-- Monthly Budget Input Section -->
    <HBox spacing="10">
        <Label text="Enter Monthly Budget:"/>
        <TextField fx:id="budgetField" promptText="Enter budget" />
    </HBox>

    <!-- Budget Action Buttons -->
    <HBox spacing="20">
        <Button text="Set Budget" onAction="#handleSetBudget"/>
        <Button text="Back" onAction="#handleBack"/>
    </HBox>

    <!-- Status Label to display budget load success or error -->
    <Label fx:id="budgetStatusLabel" text="Budget Status" styleClass="status-label"/>

    <!-- Pie Chart to show budget progress -->
    <PieChart fx:id="budgetChart" prefWidth="600" prefHeight="400" />

</VBox>
