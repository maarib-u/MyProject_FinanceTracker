<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20" stylesheets="@styles.css"
      fx:controller="com.example.financetracker.BudgetTrackerController"
      xmlns:fx="http://javafx.com/fxml">

    <Label text="Budget Tracker" styleClass="title"/>

    <HBox spacing="10">
        <Label text="Enter Monthly Budget:"/>
        <TextField fx:id="budgetField" promptText="Enter budget"/>
    </HBox>

    <HBox spacing="20">
        <Button text="Set Budget" onAction="#handleSetBudget"/>
        <Button text="Back" onAction="#handleBack"/>
    </HBox>

    <Label fx:id="budgetStatusLabel" text="Monthly Budget: £0.00" styleClass="status-label"/>

    <!-- Budget progress bar and its percentage -->
    <Label text="Budget Progress:"/>
    <ProgressBar fx:id="budgetProgressBar" prefWidth="300"/>
    <Label fx:id="progressLabel" text="Progress: £0.00 / £0.00 (0%)"/>

    <!-- Insight label for budget warnings -->
    <Label fx:id="insightLabel" text="" styleClass="warning-label"/>

</VBox>
